<div class='country__card'>
  <p class='country__name'>{{name}}</p>
  <div class='main-wrapper'>
    <div class='info-wrapper'>
      <p class='country__rest-info'>Capital: <span class='rest-info__value'>{{capital}}</span></p>
      <p class='country__rest-info'>Population:
        <span class='rest-info__value'>{{population}}</span></p>
      <p class='country__rest-info country__rest-info--display-block'>Languages:
        {{#each languages}}
          <span class='rest-info__value language-multiple-values'>{{this.name}}</span>
        {{/each}}
      </p>
    </div>
    <img class='country__flag' src='{{flag}}' alt='{{name}}' width='340' height='240' />
  </div>
</div>